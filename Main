import java.util.Scanner;

public class Program {

	public static void main(String[] args) {

		Scanner leitor= new Scanner (System.in);
		
		// PORGRAMA QEU CALCULA O ALOMENTO SALARIAL
		
		// variaveis
		double salarioAtual=0.0;
		double novoSalario=0.0;
		
		//entradas
		
		System.out.println("Digite o seu salário atual: ");
		salarioAtual= leitor.nextDouble();
		
		// processamento
		// SE O TRABALHADOR GANHA MENOS DE 500 REAIS, ENTÃO Dê 20% DE ALMENTO.
		//SENÃO dê 10% de almento.
		
		if (salarioAtual<=500) { 
			novoSalario= salarioAtual*1.20;
		}else {
			novoSalario = salarioAtual*1.10;
		}// fim  do bloco if else
		
		System.out.println("O novo salário é de R$ " + novoSalario);
		
	}// fim do método main

}// fim da classe program
